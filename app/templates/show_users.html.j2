{% extends 'base.html' %}
{% block title %} Explore {% endblock %}}
{% block content %}
    {% for user in users %}
        {% if not user.id==current_user.id %}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                    <img src="{{ user.get_icon_url() }}" class="img-fluid rounded-start" alt="avatar">
                    </div>
                    <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{user.first_name}} {{user.last_name}}</h5>
                        <p class="card-text"> Maybe we will add a bio to the user tablein the future and display it here</p>
                        {% if not current_user.is_following(user )%}    
                            <a href="{{url_for('social.follow', id=user.id)}}" class="btn btn-info">Follow</a>
                        {% else %}
                            <a href="{{url_for('social.unfollow', id=user.id)}}" class="btn btn-danger">Unfollow</a>
                        {% endif %}
                    </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}